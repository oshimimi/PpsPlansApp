<FormField Component="@Component">
    <RadzenTextBox style="width: 100%;" Name="@Component"
                   Trim=true
                   Value="@Value" ValueChanged="@ValueChanged" />

    @if (Required ?? false)
    {
        <RadzenRequiredValidator Component="@Component"
                             Text="* required" />
    }
</FormField>

@code {
    [Parameter]
    public string? Value { get; set; }
    [Parameter]
    public EventCallback<string> ValueChanged { get; set; }

    [Parameter]

    public string Component { get; set; }

    [Parameter]
    public bool? Required { get; set; }
}
