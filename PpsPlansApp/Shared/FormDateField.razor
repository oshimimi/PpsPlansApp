<FormField Component="@Component" Label="@Label">
    <RadzenDatePicker style="width: 100%;" Name="@Component"
                   Value="@Value" ValueChanged="@ValueChanged" />

    @if (Required ?? false)
    {
        <RadzenRequiredValidator Component="@Component"
                             Text="* required" />
    }
</FormField>

@code {
    [Parameter]
    public DateTime? Value { get; set; }
    [Parameter]
    public EventCallback<DateTime?> ValueChanged { get; set; }

    [Parameter]

    public string? Component { get; set; }

    [Parameter]

    public string? Label { get; set; }

    [Parameter]
    public bool? Required { get; set; }
}
