@page "/drivers/{Id:int}";


<EntityForm TItem="Driver" Id="@Id">
    <Rows>
        <div class="row">
            <div class="col-md-12">
                <RadzenFieldset Text="Детали">
                    <FormTextField @bind-Value="context.FioName"
                                   Component="Name" 
                                   Label="ФИО"
                                   Required=true />

                </RadzenFieldset>


                <RadzenFieldset>

                    <FormNoteField @bind-Value="context.Note"
                                   Component="Note" />


                </RadzenFieldset>

            </div>
        </div>
    </Rows>
</EntityForm>

@code {
    [Parameter]
    public int? Id { get; set; }
}