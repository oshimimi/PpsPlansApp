@page "/cars/{Id:int}";

<EntityForm TItem="Car" Id="@Id">
    <Rows>
        <div class="row">
            <div class="col-md-12">
                <RadzenFieldset Text="Details">

                    <FormTextField @bind-Value="context.CarNumber"
                                   Component="CarNumber" />

            @*        <FormTextField @bind-Value="context.FuelType"
                    Component="FuelType" />
*@

                    <FormTextField @bind-Value="context.Note"
                                   Component="Note" />

                </RadzenFieldset>

            </div>
        </div>
    </Rows>
</EntityForm>

@code {
    [Parameter]
    public int? Id { get; set; }
}