@page "/contracts/{Id:int}";


<EntityForm TItem="Contract" Id="@Id">
    <Rows>
        <div class="row">
            <div class="col-md-12">
                <RadzenFieldset Text="Детали">
                    <FormTextField @bind-Value="context.ContractNo"
                                   Label="№ ДС"
                                   Component="Name"
                                   Required=true />


                    <FormDateField @bind-Value="context.ContractDate"
                                   Label="Дата ДС"
                                   Component="ContractDate" />

                    <FormDateField @bind-Value="context.DeliveryDate"
                                   Label="Срок отгрузки"
                                   Component="DeliveryDate" />

                    <FormDropDownField @bind-Value="context.From"
                                   Label="Пункт загрузки"
                                   TItem="Terminal"
                                   Component="From" />

                    <FormDropDownField @bind-Value="context.Client"
                                       Label="Клиент"
                                   TItem="Client"
                                   Component="Client" />

                    <FormField Component="TotalWeight" Label="Вес (т.)">
                        <RadzenNumeric style="width: 100%;" Name="TotalWeight"
                                       @bind-Value=context.TotalWeight />

                    </FormField>
                </RadzenFieldset>

                <RadzenFieldset>
                    <FormNoteField @bind-Value="context.Note"                                   
                                   Component="Note" />
                </RadzenFieldset>

            </div>
        </div>
    </Rows>
</EntityForm>

@code {
    [Parameter]
    public int? Id { get; set; }
}