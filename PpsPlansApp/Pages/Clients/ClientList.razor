@page "/clients/list"
@inherits DbEntityGridPage<Client>

<PageHeader Title="Клиенты" />

<EntityGrid TItem="Client"
            GridPage="@this"
            TDetailsPage="ClientForm">
    <Columns>
        <RadzenDataGridColumn TItem="Client" Property="Name" Title="Name" Width="140px" />
        <RadzenDataGridColumn TItem="Client" Property="Country" Title="Страна" Width="140px" />
        <RadzenDataGridColumn TItem="Client" Property="Note" Title="Заметки" Width="200px" />

    </Columns>
</EntityGrid>

@code {

    protected override IQueryable<Client> OnQuery(IQueryable<Client> q)
    {
        return q
            .OrderByDescending(x => x.Name);
    }
}
